<p id="notice"><%= notice %></p>

<h1 style="text-align:center; color:red"><img style="height: 120px; width:120px" src="https://bpcdn.co/images/2016/05/pre-school-order.png">Orders List</h1>

</br></br>
<table align=center border=2>
  <thead>
    <tr>
      <th>Client Name</th>
      <th>Client Adress</th>
      <th>Ordered Pizzas</th>
      
    </tr>
  </thead>

  <tbody>
    <% @commandes.each do |commande| %>
      <tr>
          <td> <%= commande[:commande][:name]  %>
	        <td> <%= commande[:commande][:adresse] %>
	        <td> <table>
                  <% commande[:pizzas].each do |pizza| %>
                      <tr>
                        <td style="width:80px; height:80px"><%= pizza[:name] %> </td>
                        <td><img src="<%= pizza[:url] %>" width="50px" height="50px" /></td>
                      </tr>
                  <% end %>
	             </table>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

